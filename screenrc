defscrollback 4096

bind ^k
bind ^\
bind \\ quit
bind K kill
bind I login on
bind O login off
bind } history

defnonblock 5

defutf8 on

caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H"


altscreen on
autodetach on
bell_msg "beep"

escape ^Tt
